<script>
    // Carregar dados salvos do localStorage ao abrir a página
    function carregarDados() {
        const dadosSalvos = localStorage.getItem('informacoesProduto');
        if (dadosSalvos) {
            document.querySelectorAll('[contenteditable="true"]').forEach((celula, index) => {
                celula.innerHTML = JSON.parse(dadosSalvos)[index] || '';
            });
        }
    }

    // Salvar dados editados no localStorage
    function salvarDados() {
        const dados = [];
        document.querySelectorAll('[contenteditable="true"]').forEach((celula) => {
            dados.push(celula.innerHTML);
        });
        localStorage.setItem('informacoesProduto', JSON.stringify(dados));
        alert('Dados salvos com sucesso!');
    }

    // Executar ao carregar a página
    window.onload = carregarDados;
</script>

<button onclick="salvarDados()">Salvar Alterações</button>
